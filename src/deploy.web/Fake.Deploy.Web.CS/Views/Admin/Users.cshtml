@{
    ViewBag.Title = "Manage Users";
}

@section scripts {
    <script src="@Url.Content("~/Scripts/app/Admin.User.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            var vm = new UserAdminViewModel();
            vm.build();
            ko.applyBindings(vm);
        });
    </script>
}

<h2>Manage Users</h2>

<div class="row" style="margin-left: 30px">
    <div class="span6">
        <form class="form-horizontal" data-bind="submit: $root.registerUser">
            <fieldset>
                <legend>Create User</legend>
            </fieldset>
            <div class="control-group">
                <label class="control-label">Username</label>
                <div class="controls">
                   <input type="text" id="UserName" name="UserName"/>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">E-mail</label>
                <div class="controls">
                    <input type="text" id="Email" name="Email"/>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Password</label>
                <div class="controls">
                    <input type="password" id="Password" name="Password"/>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Confirm Password</label>
                <div class="controls">
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword"/>
                </div>
            </div>
            
            <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <button type="reset" class="btn">Cancel</button>
                </div>

        </form>
    </div>
    <div class="span6">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: users">
                    <tr>
                        <td data-bind="text: Username"></td>
                        <td data-bind="text: Email"></td>
                        <td data-bind="if: $root.users().length > 1">
                            <button data-bind="click: $root.deleteUser" class="btn btn-danger" style="margin-left: 10px"><i class="icon-trash icon-white"></i>&nbsp;Delete User</button>
                        </td>
                    </tr>
            </tbody>
        </table>
    </div>
</div>
