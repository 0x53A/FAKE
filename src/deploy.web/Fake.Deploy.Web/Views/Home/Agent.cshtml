@model string

@{
    ViewBag.Title = "Agent";
}

@section scripts {
    <script src="@Url.Content("~/Scripts/app/Home.Agent.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            var vm = new AgentViewModel();
            vm.createAgentView('@Model');
            ko.applyBindings(vm);

            $('#fileupload').fileupload({
                dataType: 'json',
                redirect: '@Url.Action("Agent", new { agentId = Model })',
                add: function (e, data) {
                    $('#selectPackageBtn').addClass('hide');
                    $('#filePlaceHolder').removeClass('hide');
                    $.each(data.files, function (i, file) {
                        $('#fileName').html('<h4> Deploying: ' + file.name + '</h4>');
                    });
                    
                    data.submit();
                },
                progressall: function (e, data) {
                    var progress = parseInt(data.loaded / data.total * 100, 10);
                    $('#progress .bar').css(
                        'width',
                        progress + '%'
                    );
                },
                done: function (e, data) {
                    $('#fileList').html('');
                    $('#filePlaceHolder').addClass('hide');
                    $('#selectPackageBtn').removeClass('hide');
                    toastr.info('Package deployed');
                    vm.refreshDeploymentsForAgent();
                },
                fail: function (e, data) {
                    $('#fileList').html('');
                    $('#filePlaceHolder').addClass('hide');
                    $('#selectPackageBtn').removeClass('hide');
                    toastr.error('Package deployment failed')
                }
            });
        });
    </script>
}

 <!-- ko with: agent -->
     <h1 data-bind="text: 'Agent - ' + Name()"></h1>
 <!-- /ko -->
 <form id="fileupload" class="form" action="/api/v1/package" method="POST" enctype="multipart/form-data">
     <fieldset>
         <div>
             <span id="selectPackageBtn" class="btn btn-success fileinput-button">
                 <i class="icon-plus icon-white"></i>
                 <span>Deploy Package</span>
                 <input type="file" name="files[]">
             </span>

         </div>
         <div id="filePlaceHolder" class="hide">
             <span id="fileName" style="padding: 10px"><i class="icon-file"></i></span>
             <div id="progress" class="progress progress-striped active">
                 <div class="bar" style="width: 0%;"></div>
             </div>
         </div>
              <div data-bind="with: agent">
         <input type="hidden" name="agentId" data-bind="value: Name" />
         <input type="hidden" name="agentUrl" data-bind="value: Address" />
     </div>
     </fieldset>

 </form>


<div class="well" data-bind="foreach: deployments">
    <div>
        <h4 data-bind="text: Name"></h4>
        <p>
            <span data-bind="text: Description"></span>
        </p>
        <div>
            <button class="btn btn-primary" data-bind="click: $root.rollbackDeployment">Rollback to Previous</button>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.ui.widget.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.iframe-transport.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.fileupload.js")" type="text/javascript"></script>

