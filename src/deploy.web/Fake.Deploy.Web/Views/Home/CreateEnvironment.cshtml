@model Fake.Deploy.Web.Model.Environment

@{
    ViewBag.Title = "CreateEnvironment";
}

<h2>CreateEnvironment</h2>

@using (Html.BeginForm("SaveEnvironment", "Home", FormMethod.Post, new { @class = "form-horizontal" })) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Environment</legend>

        <div class="control-group">
          <label class="control-label" for="environmentName">Environment Name</label>
          <div class="controls">
            <input type="text" id="environmentName" name="environmentName" placeholder="Enter agent name...">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="environmentDescription">Environment Description</label>
          <div class="controls">
            <input type="text" id="environmentDescription" name="environmentDescription" placeholder="Environment Description...">
          </div>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save changes</button>
          <button type="button" class="btn">Cancel</button>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
